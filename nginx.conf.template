server {
    listen       ${PORT};
    server_name  _;

    client_max_body_size ${CLIENT_MAX_BODY_SIZE};

    if ($http_x_api_key != "${X_API_KEY}") {
        return 401;
    }

    location / {
      proxy_pass                      ${PROXY_PASS};
      proxy_pass_request_headers      on;
      proxy_set_header                x-api-key "";
    }
}
